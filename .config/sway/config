### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod4
# Home row direction keys, like vim
set $left c
set $down t
set $up s
set $right r

# Screenshot
set $KEY_SCREENSHOT Print
set $KEY_SCREENSHOT_ALT Ctrl+Print

set $CLEAN_SSH 'source ~/.ssh/environment && ssh-add -D'

# Idle
set $TIMEOUT_COMMAND $CLEAN_SSH
set $LOCK_COMMAND 'swaylock'
set $SLEEP_COMMAND 'systemctl suspend'

# Your preferred terminal emulator
set $term "alacritty"

# Your preferred application launcher
# Note: it's recommended that you pass the final command to sway
# set $menu 'dmenu_path | dmenu -b -nb "#002b36" | xargs swaymsg exec'

### Output configuration
output * bg ~/.config/themes/digital_space_universe_4k_8k-2560x1600.jpg fill


bindsym $mod+p exec "nautilus"

#xwayland disable

# Lock
bindsym Ctrl+Escape exec $CLEAN_SSH; exec $LOCK_COMMAND


gaps inner 0
gaps outer 0

font inconsolata:DejaVu Sans Mono 8
focus_follows_mouse no
mouse_warping none

exec "mako"
#exec "networkd-notify"
bindsym Ctrl+Space exec "makoctl dismiss"


# Floating windows
for_window [class="Xmessage"] floating enable
for_window [class="Nautilus"] floating enable
for_window [class="mobilityVanet"] floating enable
for_window [class="dolphin"] floating enable
for_window [class="Thunar"] floating enable
for_window [class="okular"] floating enable
for_window [class="Yubico Authenticator"] floating enable
for_window [class="XEyes"] floating enable
for_window [class="QJackCtl"] floating enable

# Basics:
#
    # start a terminal
    bindsym $mod+Return exec $term

    # kill focused window
    bindsym $mod+Ctrl+y kill

    # start your launcher
    bindsym $mod+i exec $menu

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    #floating_modifier $mod normal
    floating_modifier Mod4 normal

    # reload the configuration file
    bindsym $mod+Ctrl+0xe8 reload

    # exit sway (logs you out of your Wayland session)
    bindsym $mod+Ctrl+E exec "swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'"

# Moving around:
#
    # Move your focus around
    bindsym $mod+$left focus left
    bindsym $mod+$down focus down
    bindsym $mod+$up focus up
    bindsym $mod+$right focus right

    # _move_ the focused window with the same, but add Ctrl
    bindsym $mod+Ctrl+$left move left
    bindsym $mod+Ctrl+$down move down
    bindsym $mod+Ctrl+$up move up
    bindsym $mod+Ctrl+$right move right
#
# Workspaces:
#
    # switch to workspace
    set $monitor-1 DVI-D-1
    set $monitor-2 DP-2
    set $monitor-3 HDMI-A-1
    set $monitor-4 HDMI-A-2

#    set $find_output swaymsg -t get_tree | jq -r '.nodes[] | select(recurse(.nodes[]?,.floating_nodes[]?) | .focused == true) | .name' | sed -e 's/$monitor-1/A/g' | sed -e 's/$monitor-2/B/g' | sed -e 's/$monitor-3/C/g' | sed -e 's/$monitor-4/D/g'

    bindsym $mod+1 workspace 01
    bindsym $mod+2 workspace 02
    bindsym $mod+3 workspace 03
    bindsym $mod+4 workspace 04
    bindsym $mod+5 workspace 05
    bindsym $mod+6 workspace 06
    bindsym $mod+7 workspace 07
    bindsym $mod+8 workspace 08
    bindsym $mod+9 workspace 09
    bindsym $mod+0 workspace 00
    bindsym $mod+0x22 workspace 01
    bindsym $mod+0xab workspace 02
    bindsym $mod+0xbb workspace 03
    bindsym $mod+0x28 workspace 04
    bindsym $mod+0x29 workspace 05
    bindsym $mod+0x40 workspace 06
    bindsym $mod+0x2b workspace 07
    bindsym $mod+0x2d workspace 08
    bindsym $mod+0x2f workspace 09
    bindsym $mod+0x2a workspace 00

    # move focused container to workspace
    bindsym $mod+Ctrl+1 move container to workspace 01
    bindsym $mod+Ctrl+2 move container to workspace 02
    bindsym $mod+Ctrl+3 move container to workspace 03
    bindsym $mod+Ctrl+4 move container to workspace 04
    bindsym $mod+Ctrl+5 move container to workspace 05
    bindsym $mod+Ctrl+6 move container to workspace 06
    bindsym $mod+Ctrl+7 move container to workspace 07
    bindsym $mod+Ctrl+8 move container to workspace 08
    bindsym $mod+Ctrl+9 move container to workspace 09
    bindsym $mod+Ctrl+0 move container to workspace 00
    bindsym $mod+Ctrl+0x22 move container to workspace 01
    bindsym $mod+Ctrl+0xab move container to workspace 02
    bindsym $mod+Ctrl+0xbb move container to workspace 03
    bindsym $mod+Ctrl+0x28 move container to workspace 04
    bindsym $mod+Ctrl+0x29 move container to workspace 05
    bindsym $mod+Ctrl+0x40 move container to workspace 06
    bindsym $mod+Ctrl+0x2b move container to workspace 07
    bindsym $mod+Ctrl+0x2d move container to workspace 08
    bindsym $mod+Ctrl+0x2f move container to workspace 09
    bindsym $mod+Ctrl+0x2a move container to workspace 00
    # Note: workspaces can have any name you want, not just numbers.
    # We just use 1-10 as the default.

# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym $mod+h splith
    bindsym $mod+v splitv

    # Switch the current container between different layout styles
    # bindsym $mod+b layout stacking
    bindsym $mod+0xe9 layout tabbed
    bindsym $mod+b layout toggle split

    # Make the current focus fullscreen
    bindsym $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym $mod+Ctrl+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym $mod+space focus mode_toggle

    # move focus to the parent container
    bindsym $mod+g focus parent

    # move window to scratchpad
    bindsym $mod+Ctrl+backspace move scratchpad
    bindsym $mod+backspace scratchpad show


# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym $left resize shrink width 10px
    bindsym $down resize shrink height 10px
    bindsym $up resize grow height 10px
    bindsym $right resize grow width 10px

    # ditto, with arrow keys
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+x mode "resize"

mode "empty" {
    bindsym $mod+Escape mode "default"
}
bindsym $mod+Escape mode "empty"

bindsym XF86AudioLowerVolume exec "pactl set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo -5%"
bindsym XF86AudioRaiseVolume exec "pactl set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo +5%"

input * {
    xkb_layout fr,fr,us
    xkb_variant bepo,
    xkb_options grp:shift_caps_toggle
}


