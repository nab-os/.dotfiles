### Variables
#
# Logo key. Use Mod1 for Alt.
set $mod Mod1
# Home row direction keys, like vim
set $left c
set $down t
set $up s
set $right r

# Screenshot
set $KEY_SCREENSHOT Print
set $KEY_SCREENSHOT_ALT Ctrl+Print

set $CLEAN_SSH 'source ~/.ssh/environment && ssh-add -D'

# Idle
set $TIMEOUT_COMMAND $CLEAN_SSH
set $LOCK_COMMAND 'swaylock'
set $SLEEP_COMMAND 'systemctl suspend'

# Your preferred terminal emulator
set $term "alacritty"

# Your preferred application launcher
# Note: it's recommended that you pass the final command to sway
# set $menu 'dmenu_path | dmenu -b -nb "#002b36" | xargs swaymsg exec'

### Output configuration
output * bg ~/.config/themes/digital_space_universe_4k_8k-2560x1600.jpg fill


bindsym --to-code $mod+e exec "nautilus"

#xwayland disable

# Lock
bindsym --to-code Ctrl+Escape exec $CLEAN_SSH; exec $LOCK_COMMAND


gaps inner 20
gaps outer 0
smart_gaps on

font inconsolata:DejaVu Sans Mono 8
focus_follows_mouse no
mouse_warping none

#exec "networkd-notify"
bindsym --to-code Ctrl+Space exec "makoctl dismiss"

# Basics:
#
    # start a terminal
    bindsym --to-code $mod+Return exec $term

    # kill focused window
    bindsym --to-code $mod+Ctrl+y kill

    # start your launcher
    bindsym --to-code $mod+d exec $menu

    # Drag floating windows by holding down $mod and left mouse button.
    # Resize them with right mouse button + $mod.
    # Despite the name, also works for non-floating windows.
    # Change normal to inverse to use left mouse button for resizing and right
    # mouse button for dragging.
    #floating_modifier $mod normal
    floating_modifier Mod4 normal

    # reload the configuration file
    bindsym --to-code $mod+Ctrl+0xe8 reload

    # exit sway (logs you out of your Wayland session)
    bindsym --to-code $mod+Ctrl+E exec "swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'"

# Moving around:
#
    # Move your focus around
    bindsym --to-code $mod+$left focus left
    bindsym --to-code $mod+$down focus down
    bindsym --to-code $mod+$up focus up
    bindsym --to-code $mod+$right focus right

    # _move_ the focused window with the same, but add Ctrl
    bindsym --to-code $mod+Ctrl+$left move left
    bindsym --to-code $mod+Ctrl+$down move down
    bindsym --to-code $mod+Ctrl+$up move up
    bindsym --to-code $mod+Ctrl+$right move right
#
# Workspaces:
#
    # switch to workspace
    set $monitor-1 DVI-D-1
    set $monitor-2 DP-2
    set $monitor-3 HDMI-A-1
    set $monitor-4 HDMI-A-2

#    set $find_output swaymsg -t get_tree | jq -r '.nodes[] | select(recurse(.nodes[]?,.floating_nodes[]?) | .focused == true) | .name' | sed -e 's/$monitor-1/A/g' | sed -e 's/$monitor-2/B/g' | sed -e 's/$monitor-3/C/g' | sed -e 's/$monitor-4/D/g'

    bindsym --to-code $mod+0x22 workspace 01
    bindsym --to-code $mod+0xab workspace 02
    bindsym --to-code $mod+0xbb workspace 03
    bindsym --to-code $mod+0x28 workspace 04
    bindsym --to-code $mod+0x29 workspace 05
    bindsym --to-code $mod+0x40 workspace 06
    bindsym --to-code $mod+0x2b workspace 07
    bindsym --to-code $mod+0x2d workspace 08
    bindsym --to-code $mod+0x2f workspace 09
    bindsym --to-code $mod+0x2a workspace 00

    # move focused container to workspace
    bindsym --to-code $mod+Ctrl+0x22 move container to workspace 01
    bindsym --to-code $mod+Ctrl+0xab move container to workspace 02
    bindsym --to-code $mod+Ctrl+0xbb move container to workspace 03
    bindsym --to-code $mod+Ctrl+0x28 move container to workspace 04
    bindsym --to-code $mod+Ctrl+0x29 move container to workspace 05
    bindsym --to-code $mod+Ctrl+0x40 move container to workspace 06
    bindsym --to-code $mod+Ctrl+0x2b move container to workspace 07
    bindsym --to-code $mod+Ctrl+0x2d move container to workspace 08
    bindsym --to-code $mod+Ctrl+0x2f move container to workspace 09
    bindsym --to-code $mod+Ctrl+0x2a move container to workspace 00

# Layout stuff:
#
    # You can "split" the current object of your focus with
    # $mod+b or $mod+v, for horizontal and vertical splits
    # respectively.
    bindsym --to-code $mod+h splith
    bindsym --to-code $mod+v splitv

    # Switch the current container between different layout styles
    # bindsym $mod+b layout stacking
    bindsym --to-code $mod+0xe9 layout tabbed
    bindsym --to-code $mod+b layout toggle split

    # Make the current focus fullscreen
    bindsym --to-code $mod+f fullscreen

    # Toggle the current focus between tiling and floating mode
    bindsym --to-code $mod+Ctrl+space floating toggle

    # Swap focus between the tiling area and the floating area
    bindsym --to-code $mod+space focus mode_toggle

    # move focus to the parent container
    bindsym --to-code $mod+g focus parent

    # move window to scratchpad
    bindsym --to-code $mod+Ctrl+backspace move scratchpad
    bindsym --to-code $mod+backspace scratchpad show


# Resizing containers:
#
mode "resize" {
    # left will shrink the containers width
    # right will grow the containers width
    # up will shrink the containers height
    # down will grow the containers height
    bindsym --to-code $left resize shrink width 10px
    bindsym --to-code $down resize shrink height 10px
    bindsym --to-code $up resize grow height 10px
    bindsym --to-code $right resize grow width 10px

    # ditto, with arrow keys
    bindsym --to-code Left resize shrink width 10px
    bindsym --to-code Down resize grow height 10px
    bindsym --to-code Up resize shrink height 10px
    bindsym --to-code Right resize grow width 10px

    # return to default mode
    bindsym --to-code Return mode "default"
    bindsym --to-code Escape mode "default"
}
bindsym --to-code $mod+x mode "resize"

mode "empty" {
    bindsym --to-code $mod+Escape mode "default"
}
bindsym --to-code $mod+Escape mode "empty"

bindsym --to-code XF86AudioLowerVolume exec "pactl set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo -5%"
bindsym --to-code XF86AudioRaiseVolume exec "pactl set-sink-volume alsa_output.pci-0000_00_1b.0.analog-stereo +5%"

input * {
    xkb_layout fr,us
    xkb_variant bepo,colemak
    xkb_options "grp:alts_toggle"
}


# Window borders
default_border pixel 2
default_floating_border none
hide_edge_borders none
smart_borders no_gaps

